<h1 class="home">Welcome to <b>MuniciPal</b></h1>

<div class="stretcher">
  <div id="map"></div>
</div>

<div class="wrapper" style="margin: 0 auto;">
  <div class="container-fluid">
    <div class="col-md-7">
      <div class="block">
        <h3>Look up warrants and citations</h3>
        <p id="instructions" class="sms-explanation">Type your citation number, drivers license, or name</p>
        <form action="/walkthrough/search" id="lookup-form" method="post" class="input-group form-group form-group-lg">
          <input type="text" name="q" class="form-control mousetrap" placeholder="398814619 / L814561589 / John Smith">
          <span class="input-group-btn">
            <button id="walkthrough-search-submit" class="btn btn-lg btn-primary" type="submit">Go!</button>
          </span>
        </form>
        <p id="search-error-message"></p>
      </div>
    </div>
    <div class="col-md-5">
      <div class="block block-shaded">
        <h3>Text <em>hello</em> to</h3>
        <h2 class="phone-number">3306806866</h2>
        <div class="sms-explanation">to find citation or court data with your mobile phone</div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(function() {
    MunicipalMap.render();
    Lookup.render();
    $("input[name=q]").focus();
  });
</script>
